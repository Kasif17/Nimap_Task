<body>
    <div class="main-wrapper">

        <!-- Start Feature Area -->
        <section class="featured-area">

            <div class="container">
                <section id="main-content">
                    <section class="wrapper"><br>
                              <h3><i class="fa  fa-plus"></i> Edit Product</h3><br>
                      <div class="row">
                        <div class="container">

                          <form action="/product/editProduct/<%=idp%>" method="POST">
                        
              
                            <div class="form-group">
                              <label for="nom">Name Product :</label>
                              <input type="text" class="form-control"   name="name_p" id="name_p" required>
                            </div>
                            <div class="form-group">
                              <label for="prenom">Price Product :</label>
                              <input type="text" class="form-control"  name="price" id="price" required>
                            </div>
                            <div class="form-group">
                              <label>Category :</label>
                              <select class="form-control" name="category" id="category" >
                                <% rows.forEach(function(row){ %>
                                 <option name="idc" id="idc" value="<%= row.category %>">Ctg <%= row.idc %> : <%= row.category %></option>
                                 <% }); %>
                             </select>
                            </div>
                        <br>
                            <button type="submit" class="btn btn-primary">Submit</button>
                          </form>
                        </div>
                    
                  </div>
                  
                    </section>
                   
                  </section>
    
    </section>
    </div>
    </section>
