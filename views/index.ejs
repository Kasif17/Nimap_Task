                        <div class="banner-video"> 
                            <div class="overlay overlay-bg"></div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="main-wrapper">

        <!-- Start Feature Area -->
        <section class="featured-area">

            <div class="container">
                <section id="main-content">
                    <section class="wrapper"><br>
                        <div class="row">
                            <!-- page start-->
                            <table class="table">
                                <thead> 
                                    <tr>
                                        <th scope="col">RÃ©f</th> 
                                        <th scope="col">Name</th> 
                                        <th scope="col">Price</th> 
                                        <th scope="col">Category</th> 
                                        <th scope="col">Edit</th> 
                                    </tr>
                                </thead> 
                                <tbody>
                                    <% rows.forEach(function(row){ %> 
                                        <tr> 
                                            <th scope="row">PDA62-00<%= row.idp %> 
                                            </th> 
                                            <td> 
                                                <%= row.name_p %> 
                                            </td> 
                                            <td> 
                                                <%= row.price %>,00 $ 
                                            </td> 
                                            <td> 
                                                <%= row.name_c %> 
                                            </td> 
                                            <td class="center hidden-phone">
                                                <a href="/product/editProduct/<%= row.idp %>" class="btn btn-outline btn-sm"><i
                                                        class="fa fa-pencil"></i></a>
                                                <a href="/product/deleteProduct/<%= row.idp %>" class="btn btn-outline btn-sm"><i
                                                        class="fa fa-trash-o "></i></a>
                                            </td>
                                        </tr>
                                        <% }); %> 
                                </tbody> 
                            </table> 
                        </div> 

                        <% if (page > 1) { %>
                            <a href="/?page=<%= page - 1 %>" type="button" class="btn btn-outline-primary">Previous Page</a>
                        <% } %>
                        <a href="/?page=<%= page + 1 %>" type="button" class="btn btn-outline-primary">Next Page</a>

                        <a href="/product/addProduct" type="button" class="btn btn-outline-success">Add Product</a>
                        <a href="/category" type="button" class="btn btn-outline-success">Category List</a>
            </div>
            <!-- page end-->
    </div> 
    
    </section> 
    
    </section>
    </div>
    </section>
